<launch>

<arg name="map_file" default="$(find turtlebot3_navigation)/maps/map.yaml"/>
<arg name="move_forward_only" default="true"/>

<node pkg="map_server" name="map_server" type="map_server" args="$(arg map_file)"/>

<include file="$(find fdpbot_description)/launch/amcl.launch"/>

<include file="$(find fdpbot_description)/launch/movebase.launch">
    <arg name="move_forward_only" value="$(arg move_forward_only)"/>
  </include>

<node pkg="rviz" type="rviz" name="rviz" required="true" args="-d $(find fdpbot_description)/launch/nav.rviz"/>

</launch>